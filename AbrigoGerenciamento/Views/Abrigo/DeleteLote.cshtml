@model AbrigoGerenciamento.Models.LoteAlimento

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Excluir Lote";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h2 class="card-title text-danger mb-4">Excluir Lote de Alimento</h2>
            <p class="fs-5">Tem certeza que deseja excluir o lote: <strong>@Model.Nome</strong>?</p>

            <form asp-action="DeleteLote" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">Excluir</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>