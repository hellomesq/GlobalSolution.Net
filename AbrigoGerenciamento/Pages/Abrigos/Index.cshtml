@page
@model AbrigoGerenciamento.Pages.Abrigos.IndexModel
@{
    ViewData["Title"] = "Lista de Abrigos";
}

<h1>Lista de Abrigos</h1>
<a asp-page="Create">Novo Abrigo</a>
<table class="table">
    <thead>
    <tr>
        <th>Nome</th>
        <th>Endereço</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var abrigo in Model.Abrigos)
    {
        <tr>
            <td>@abrigo.Nome</td>
            <td>@abrigo.Cep</td>
            <td>
                <a asp-page="Edit" asp-route-id="@abrigo.Id">Editar</a> |
                <a asp-page="Details" asp-route-id="@abrigo.Id">Detalhes</a> |
                <a asp-page="Delete" asp-route-id="@abrigo.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>